<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ratings Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Ratings Heading -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ratings"
                    android:textSize="25sp"
                    android:textColor="#054D08"
                    android:textStyle="bold|italic"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="10dp"
                    android:shadowColor="#B3B3B3"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="4" />

                <!-- Food Rating -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progress_food"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/green_progress"
                    android:progress="90" />

                <TextView
                    android:id="@+id/text_food_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="#555555" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progress_service"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/green_progress"
                    android:progress="80" />

                <TextView
                    android:id="@+id/text_service_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="#555555" />

                <!-- Ambience Rating -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ambience"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progress_ambience"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/green_progress"
                    android:progress="70" />

                <TextView
                    android:id="@+id/text_ambience_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="#555555" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hygiene"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progress_hygiene"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/green_progress"
                    android:progress="85" />

                <TextView
                    android:id="@+id/text_hygiene_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="#555555" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Menu Images Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="2dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#E0E0E0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textSize="25sp"
                android:textColor="#054D08"
                android:textStyle="bold|italic"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:shadowColor="#B3B3B3"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="4" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/menu_image_1"
                        android:layout_width="250dp"
                        android:layout_height="350dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/menuone"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedImageShape" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/menu_image_2"
                        android:layout_width="250dp"
                        android:layout_height="350dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/menutwo"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedImageShape" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/menu_image_3"
                        android:layout_width="250dp"
                        android:layout_height="350dp"
                        android:src="@drawable/menuthree"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedImageShape" />

                </LinearLayout>


    </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
